<% if @user || !@material.need_login %>
<!-- page heading start-->
    <div class="page-heading">
        <h3>
            <%= @material.name %> <small> - <%= @material.cate %></small>
        </h3>
    </div>
    <!-- page heading end-->

    <!--body wrapper start-->
    <div class="wrapper">
        <div class="row blog">
            <div class="col-md-8 col-xs-12" style='z-index: 1'>
                <div class="panel no-m-b">
                    <div class="panel-body">
                        简介: <%= @material.intro %>
                    </div>
                </div>
                <div class="blog">
                    <div class="single-blog">
                        <div class="panel">
                            <header class="panel-heading">
                                <span class='recom'>推荐指数:
                                    <% 5.times do |i| %>
                                      <i class='fa fa-star <%= 'active' if (@material.recommend.to_i || 0 ) > i %> '></i>
                                    <% end %>
                                </span>
                            </header>

                            <div class="panel-body">
                                <div class="fr-view">
                                  <% cache @material.cache_key, 3.minutes do %>
                                    <%= (@material.details || '').html_safe %>
                                  <% end %>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="pull-right">
                                    <%= @material.readtimes %>人浏览过
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="blog-post">
                            <h3>猜你喜欢</h3>
                            <% @likes.each do |l| %>
                                <div class="media">
                                    <%= link_to material_path(l), class: "pull-left" do %>
                                      <%= image_tag l.cover.thumb, class: 'like-cover' %>
                                    <% end %>
                                    <div class="media-body">
                                        <div class="">
                                            <h5 class="media-heading p-info">
                                                <%= link_to l.name, material_path(l) %>
                                            </h5>
                                            <p class='p-intro'>
                                                <%= l.intro %>
                                            </p>
                                            <p class='p-intro'>
                                                <span class='readtimes'>浏览<%= l.readtimes %>次</span>
                                                <span class='readtimes'>下载<%= l.d_times %>次</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%= stylesheet_link_tag "froala_style.min" %>

    <!--body wrapper end-->
<% else %>
    <script type="text/javascript">
        alert("该资料包含专属优惠,需要登录后才可以查看哦~");
        $(function() {
            $("#loginModal").modal({
                'show': true,
                'keyboard': false
            })
            $(".modal").unbind("click");
        })
    </script>
<% end %>
