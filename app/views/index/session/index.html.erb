<!DOCTYPE html>
<html lang="en">
<head>
  <title>学吧用户登录</title>
  <meta charset="utf-8">
  <meta name="keywords" content="明新教育登录">
  <meta name="description" content="">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag 'style', media: 'all' %>
  <%= stylesheet_link_tag 'style-responsive', media: 'all' %>
  <%= stylesheet_link_tag params[:controller], media: 'all' %>
</head>

<body class="login-body">

<div class="container">

    <%= form_tag do_login_path, class: "form-signin pwd", id: "login-form-pwd" do %>
        <div class="form-signin-heading text-center">
            <h1 class="sign-title">用户登录</h1>
            <img src="/assets/index/login-logo.png" alt=""/>
        </div>
        <div class="login-wrap">
            <div class="">
                <input type="text" name='user[phone]' class="form-control" placeholder="手机号" autofocus>
            </div>
            <input type="password" name='user[password]' class="form-control" placeholder="密码">
            <a href="JavaScript: void(0)" id="tab-phone" class="pull-right" style="margin-top: -5px; margin-bottom: 5px">短信验证码登录</a>

            <button class="btn btn-lg btn-login btn-block" type="button" id="login-pwd">
                <i class="fa fa-check"></i>
            </button>

            <div class="registration">
                还没有帐号?
                <%= link_to '立即注册', new_user_path %>
            </div>
        </div>
    <% end %>
    <%= form_tag do_login_path, class: "form-signin phone", id: "login-form-phone" do %>
        <div class="form-signin-heading text-center">
            <h1 class="sign-title">用户登录</h1>
            <img src="/assets/index/login-logo.png" alt=""/>
        </div>
        <div class="login-wrap">
            <%= hidden_field_tag "user[login_type]", :msg_code %>
            <div class="phone-group">
                <input type="text" id='phone' name='user[phone]' class="form-control" placeholder="手机号" autofocus>
                <a href="JavaScript:void(0)" id="code" class="btn btn-default">获取验证码</a>
            </div>
            <input type="text" name='user[msg_code]' class="form-control" placeholder="短信验证码">
            <a href="JavaScript: void(0)" id="tab-pwd" class="pull-right" style="margin-top: -5px; margin-bottom: 5px">帐号密码登录</a>

            <button class="btn btn-lg btn-login btn-block" type="button" id="login-phone">
                <i class="fa fa-check"></i>
            </button>

            <div class="registration">
                还没有帐号?
				<%= link_to '立即注册', new_user_path %>
            </div>
        </div>
    <% end %>

    <!-- Modal -->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://cdn.bootcss.com/jquery/2.2.1/jquery.min.js"></script>
<%= javascript_include_tag 'application' %>
<%= javascript_include_tag params[:controller] %>
</body>
</html>
