					<input value='发表评论' type="button" class="btn btn-post pull-right" id="comment_submit" disabled="true">
					<ul class="nav nav-pills p-option">
						<!-- <li>
							<a href="#"><i class="fa fa-user"></i></a>
						</li> -->
