<section>
    <!-- left side start-->
    <div class="left-side sticky-left-side">

        <!--logo and iconic logo start-->
        <div class="logo">
            <a href="/"><img src="/assets/logo.png" alt=""></a>
        </div>

        <div class="logo-icon text-center">
            <a href="/"><img src="/assets/logo_icon.png" alt=""></a>
        </div>
        <!--logo and iconic logo end-->

        <div class="left-side-inner">

            <!-- visible to small devices only -->
            <div class="visible-xs hidden-sm hidden-md hidden-lg">
                <% if session[:user_id] %>
                    <div class="media logged-user">
                        <%= image_tag @user.avatar.mini, class: "u-ico-mini" %>
                        <div class="media-body">
                            <h4><a href="JavaScript:void(0)"><%= (@user.name || '').first + '同学' %></a></h4>
                        </div>
                    </div>

                    <h5 class="left-nav-title">帐号信息</h5>
                    <ul class="nav nav-pills nav-stacked custom-nav">
                        <li>
                            <%= link_to ucenter_path do %>
                              <i class="fa fa-user"></i>个人中心
                            <% end %>
                        </li>
                        <li><a href="#"><i class="fa fa-cog"></i>浏览记录</a></li>
                        <li>
                            <%= link_to logout_path, method: :post do %>
                                <i class="fa fa-sign-out"></i>退出
                            <% end %>
                        </li>
                    </ul>
                <% else %>
                    <div class="media logged-user">
                        <img src="/assets/default/avatar.png" alt="" class="u-ico-mini">
                        <div class="media-body">
                            <h4><a href="JavaScript:void(0)">用户未登录</a></h4>
                        </div>
                    </div>

                    <ul class="nav nav-pills nav-stacked custom-nav">
                        <div class="row">
                            <div class="col-xs-6" style='padding-right: 0'>
                                <%= link_to '登录', login_path, type: "button", class: "btn btn-default btn-wide", "data-toggle" => "modal", "data-target" => "#loginModal", style: "margin-top: 8px;" %>
                            </div>
                            <div class="col-xs-6" style='padding-left: 0'>
                                <%= link_to '注册', new_user_path, type: "button", class: "btn btn-default btn-wide", style: "margin-top: 8px;" %>
                            </div>
                        </div>
                    </ul>
                <% end %>
            </div>

            <!--sidebar nav start-->
            <ul class="nav nav-pills nav-stacked custom-nav">
                <li class="<%= 'active' if params[:controller] == 'index/main' %>"><a href="/"><i class="fa fa-home"></i> <span>首页</span></a></li>
                <li class="menu-list <%= check_cur_ctrl 'index/products' %>"><a href="/products"><i class="fa fa-laptop"></i> <span>产品</span></a>
                    <ul class="sub-menu-list">
                        <li><%= link_to '语培', products_url + '?type=yupei' %></li>
                        <li><%= link_to '留学', products_url + '?type=liuxue' %></li>
                        <li><%= link_to '考研', products_url + '?type=kaoyan' %></li>
                        <li><%= link_to '驾校', products_url + '?type=jiakao' %></li>
                        <li><%= link_to '娱乐', products_url + '?type=yule' %></li>
                    </ul>
                </li>
            </ul>
            <!--sidebar nav end-->

        </div>
    </div>
    <!-- left side end-->

    <!-- main content start-->
    <div class="main-content" >

        <!-- header section start-->
        <div class="header-section">

            <!--toggle button start-->
            <a class="toggle-btn"><i class="fa fa-bars"></i></a>
            <!--toggle button end-->

            <!--search start-->
            <form class="searchform" action="/" method="post">
                <input type="text" class="form-control" name="keyword" placeholder="Search here..." />
            </form>
            <!--search end-->

            <!--notification menu start -->
            <div class="menu-right">
                <ul class="notification-menu">
                    <!-- <li>
                        <a href="#" class="btn btn-default dropdown-toggle info-number" data-toggle="dropdown">
                            <i class="fa fa-tasks"></i>
                            <span class="badge"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-head pull-right">
                            <h5 class="title">系统任务</h5>
                            <ul class="dropdown-list user-list">
                                <li>
                                    <a href="#">
                                        <div class="task-info">
                                            <div>暂无</div>
                                        </div>
                                        <div class="progress progress-striped">
                                            <div style="width: 80%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="80" role="progressbar" class="progress-bar">
                                                <span class="">80% </span>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li class="new"><a href="">查看所有</a></li>
                            </ul>
                        </div>
                    </li> -->
                    <li>
                        <a href="#" class="btn btn-default dropdown-toggle info-number" data-toggle="dropdown">
                            <i class="fa fa-envelope-o"></i>
                            <span class="badge"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-head pull-right">
                            <h5 class="title">站内消息</h5>
                            <ul class="dropdown-list normal-list">
                                <li>
                                    <a href="">
                                        <span class="thumb">暂无</span>
                                        <!-- <span class="desc">
                                          <span class="name">暂无</span>
                                          <span class="msg">Lorem ipsum dolor sit amet...</span>
                                        </span> -->
                                    </a>
                                </li>
                                <!-- <li class="new"><a href="">所有消息</a></li> -->
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a href="#" class="btn btn-default dropdown-toggle info-number" data-toggle="dropdown">
                            <i class="fa fa-bell-o"></i>
                            <span class="badge"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-head pull-right">
                            <h5 class="title">系统公告</h5>
                            <ul class="dropdown-list normal-list">
                                <li class="new">
                                    <a href="">
                                        <!-- <span class="label label-danger"><i class="fa fa-bolt"></i></span> -->
                                        <span class="name">暂无 </span>
                                        <!-- <em class="small">34 mins</em> -->
                                    </a>
                                </li>
                                <!-- <li class="new"><a href="">所有公告</a></li> -->
                            </ul>
                        </div>
                    </li>
                    <li>
                        <!-- 判断是否登录 -->
                        <% if session[:user_id] %>
                            <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <%= image_tag @user.avatar.mini %>
                                <%= (@user.name || '').first + '同学' %>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                                <li>
                                    <%= link_to ucenter_path do %>
                                      <i class="fa fa-user"></i>个人中心
                                    <% end %>
                                </li>
                                <li><a href="#"><i class="fa fa-cog"></i>浏览记录</a></li>
                                <li>
                                    <%= link_to logout_path, method: :post do %>
                                        <i class="fa fa-sign-out"></i>退出
                                    <% end %>
                                </li>
                            </ul>
                        <% else %>
                            <%= link_to '登录', login_path, type: "button", class: "btn btn-default", "data-toggle" => "modal", "data-target" => "#loginModal", style: "margin-top: 8px;" %>
                            <%= link_to '注册', new_user_path, type: "button", class: "btn btn-default", style: "margin-top: 8px;" %>
                        <% end %>
                    </li>

                </ul>
            </div>
            <!--notification menu end -->
        </div>
        <!-- header section end-->


    <% unless session[:user_id] %>
        <!-- Small login modal -->
        <!-- Modal -->
        <div aria-hidden="true" aria-labelledby="loginModalLabel" role="dialog" tabindex="-1" id="loginModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-body">
                    <%= form_tag do_login_path, class: "form-signin", id: "login-form" do %>
                        <div class="form-signin-heading text-center">
                            <h1 class="sign-title">用户登录</h1>
                            <img src="/assets/login-logo.png" alt=""/>
                        </div>
                        <div class="login-wrap">
                            <%= hidden_field_tag "user[login_type]", :msg_code %>
                            <div class="phone-group">
                                <input type="text" id='phone' name='user[phone]' class="form-control" placeholder="手机号" autofocus>
                                <a href="JavaScript:void(0)" id="code" class="btn btn-default">获取验证码</a>
                            </div>
                            <input type="text" name='user[msg_code]' class="form-control" placeholder="短信验证码">

                            <button class="btn btn-lg btn-login btn-block" type="button" id="login">
                                <i class="fa fa-check"></i>
                            </button>

                            <div class="registration">
                                还没有帐号?
                				<%= link_to '立即注册', new_user_path %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        <%= stylesheet_link_tag 'index/session' %>
        <%= javascript_include_tag 'index/session' %>
    <% end %>
