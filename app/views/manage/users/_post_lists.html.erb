<% user ||= @user %>
<% @posts.each do |post| %>
	<li role="remove">
		<div class="opt-menu pull-right">
			<span class="dropdown-toggle" data-toggle="dropdown">
				<i class='fa fa-angle-down'></i>
			</span>
			<ul class="dropdown-menu pull-right">
			  <li>
				  <a href="javascript:void(0)" data-href="<%= manage_post_path(post) %>" role="delete-confirm" data-method="delete" data-info="确定要删除吗">删除</a>
			  </li>
			</ul>
		</div>

		<span class="pull-right school-info"><%= post.school.name if post.school %></span>

		<div class="avatar">
			<%= image_tag user.avatar.mini %>
		</div>
		<div class="activity-desk">
			<span><%= user.nickname %></span>
			<p class="text-muted"><%= format_time post.created_at %></p>
			<%= link_to manage_post_path(post), class: "p-title" do %>
				<span class="">
					<%= post.title %>
				</span>
			<% end %>
			<div class="text dot">
				<%= link_to manage_post_path(post) do %>
					<span class="dot-collapse">
						<%= format_cate post.cate if post.cate %>
						<%= post.content.html_safe %>
					</span>
				<% end %>
			</div>
			<div class="album">
				<% if post.images && post.images.class.name == "Hash" %>
					<div class="blog-imgs img-gallery">
						<% $images = post.images %>
						<% $images.keys.slice(0..8).each_with_index do |c, i| %>
							<div class="col-xs-4 col-sm-3 col-md-2 col-lg-2 img-pane">
								<div class="blog-img-sm" style="background: url(<%= $images[c]['thumb'] %>)" data-url="<%=$images[c]['url'] %>" >
									<a href="<%= $images[c]['url'] %>" data-caption="<%= i + 1 %>/<%= $images.length %>">
										<img src="" alt="" style=:display: none;>
									</a>
								</div>
							</div>
						<% end %>
					</div>
				<% end %>
			</div>
			<div class="p-footer">
				<div class="readtimes"><i class="fa fa-eye"></i><span><%= post.readtimes %></span></div>
				<div class="coments">
					<%= link_to "#{manage_post_path(post)}?#comments" do %>
						<i class="fa fa-comments-o" role='comment'></i>
						<span>
							<%= post.comments_count %>
						</span>
					<% end %>
				</div>
				<div class="thumbs">
					<i class="fa fa-thumbs-o-up"></i>
					<span><%= post.thumbs_count %></span>
				</div>
			</div>
		</div>
	</li>
<% end %>
