<!-- page heading start-->
<div class="page-heading">
  <h3>
      轮播图
  </h3>
  <ul class="breadcrumb">
      <li>
          <%= link_to '系统设置', "" %>
      </li>
      <li class="active">
          所有轮播图
      </li>
  </ul>
</div>
<!-- page heading end-->
<div class="wrapper">
  <div class="row">
   <div class="col-xs-12 col-md-12">
    <div class="panel">
        <div class="panel-body">
            <%= link_to '添加图片', new_manage_carousel_path, class: "btn btn-primary" %>

    <div id="carousel-generic" class="carousel slide" data-ride="carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% index = 0 %>
          <% @carousels.each do |c| %>
            <li data-target="#carousel-generic" data-slide-to="<%= index %>" class="indicator <%= 'active' if index == 0 %>"></li>
            <% index +=1 %>
          <% end %>
        </ol>
        <% index = 0 %>
        <% @carousels.each do |c| %>
          <div class="item <%= 'active' if index == 0 %>">
            <a href="<%= c.link %>">
              <div class="c-bg" style="background: url('<%= c.image %>')"></div>
              <div class="carousel-caption">
              </div>
            </a>
          </div>
          <% index += 1 %>
        <% end %>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class='carousel-preview'>
      <div style='width: 100%; display: inline-block'>
          <ol class="carousel-list" style='display: block'>
            <% @carousels.each do |c| %>
              <li data-carousel-id="<%= c.id %>">
                <div class="btn-group left">
                  <% unless c == @carousels.first %>
                    <a href="javascript: void(0)" data-href='<%= lct_control_manage_carousels_url(c.id) + "?lct=advance" %>' class="btn-sm btn-danger" role='carousel-clt-control' data-method='post'>
                      <span class="glyphicon glyphicon-arrow-left"></span>
                    </a>
                  <% end %>
                  <% unless c == @carousels.last %>
                    <a href="javascript: void(0)" data-href='<%= lct_control_manage_carousels_url(c.id) + "?lct=back" %>' class="btn-sm btn-danger" role='carousel-clt-control' data-method='post'>
                      <span class="glyphicon glyphicon-arrow-right"></span>
                    </a>
                  <% end %>
                </div>
                <div class="btn-group right">
                  <%= link_to '编辑', edit_manage_carousel_path(c), class: "btn-sm btn-primary" %>
                  <a id="rm-carousel" href="javascript: void(0)" data-href="<%= unshow_manage_carousels_url(c) %>" class="btn-sm btn-primary">移除</a>
                </div>
                <%= image_tag c.image %>
                <a href="<%= c.link %>" class="link"><%= c.link %></a>
              </li>
            <% end %>
          </ol>
      </div>
    </div>

    <br>
    <ul class="btn-group pull-right">
      <li>
        <%= link_to "历史记录", history_manage_carousels_path, class: "btn btn-primary"  %>
      </li>
    </ul>
  </div>
 </div>
</div>
</div>
</div>
