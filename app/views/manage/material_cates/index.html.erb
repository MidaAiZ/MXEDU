<!-- page heading start-->
<div class="page-heading">
    <h3>
        资料分类
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="#">所有分类</a>
        </li>
        <li>
            <a href="#">管理分类</a>
        </li>
    </ul>
</div>
<!-- page heading end-->

<!--body wrapper start-->
<div class="wrapper">
     <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <!-- <header class="panel-heading">
                    Editable Table
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down toggle-show"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
                </header> -->
                <div class="panel-body">
                    <div class="adv-table editable-table ">
                        <div class="clearfix">
                            <div class="btn-group">
                                <button id="editable-sample_new" class="btn btn-primary">
                                    添加分类 <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <div class="btn-group pull-right">
                                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">工具 <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#">打印</a></li>
                                    <li><a href="#">导出Excel</a></li>
                                </ul>
                            </div>
                        </div>
                        <br>
                        <div class="space15"></div>
                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                        <thead>
                            <tr>
                                <th>类别名</th>
                                <th>资料数目</th>
                                <th>创建日期</th>
                                <th>编辑</th>
                                <th>删除</th>
                            </tr>
                        </thead>
                            <tbody>
                                <% cache @material_cates.cache_key, expires_in: 1.hours do %>
                                    <% @material_cates.each do |m| %>
                                        <tr class="">
                                            <td><%= m.name %></td>
                                            <td><%= m.count || 0 %></td>
                                            <td><%= m.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                                            <td><a class="edit" href="javascript:;" data-id='<%= m.id %>'>编辑</a></td>
                                            <td><a class="delete" href="javascript:;" data-id='<%= m.id %>'>删除</a></td>
                                        </tr>
                                    <% end %>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!--body wrapper end-->

<!-- END JAVASCRIPTS -->
<script>
    jQuery(document).ready(function() {
        EditableTable.init();
    });
</script>
