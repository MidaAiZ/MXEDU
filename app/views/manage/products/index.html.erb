<!-- page heading start-->
<div class="page-heading">
  <h3>
    全部产品信息
  </h3>
  <ul class="breadcrumb">
    <li>
      <a href="all_courses.html">产品管理</a>
    </li>
    <li class="active">
      全部产品信息
    </li>
  </ul>
</div>
<!-- page heading end-->

<!--body wrapper start-->
<div class="wrapper">
  <div class="row">
    <div class="col-sm-12">
      <section class="panel">
        <header class="panel-heading">
          全部产品信息
        </header>
        <div class="panel-body">
          <div class="adv-table editable-table ">
            <div class="clearfix">
              <div class="btn-group">
                <%= link_to new_manage_product_path do %>
                  <button class="btn btn-primary">
                    创建产品
                    <i class="fa fa-plus"></i>
                  </button>
                <% end %>
              </div>
              <div class="btn-group pull-right">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">工具
                  <i class="fa fa-angle-down"></i>
                </button>
                <ul class="dropdown-menu pull-right">
                  <li>
                    <a href="javascript:void(0)" id="print">打印</a>
                  </li>
                  <li>
                    <a href="javascript:void(0)" id="export">导出为Excel</a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="space15"></div>

            <!--startprint-->
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
              <thead>
                <tr>
                  <th>名称</th>
                  <th>分类</th>
                  <th>价格</th>
                  <th>发布日期</th>
                  <th>发布者</th>
                  <th>详情</th>
                </tr>
              </thead>
              <tbody>
                <!-- 此处动态生成 -->
                <% @products.each do |p| %>
                    <tr>
                        <td><%= p.name %></td>
                        <td><%= p.cate %></td>
                        <td><%= p.price %></td>
                        <td><%= p.created_at %></td>
                        <td><%= p.admin.number %></td>
                        <td><%= link_to '查看', manage_product_path(p) %></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @products %>

            <!--endprint-->
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
<!--body wrapper end-->
