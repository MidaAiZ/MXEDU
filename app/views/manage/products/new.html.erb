<!-- page heading start-->
<div class="page-heading">
    <h3>
        新建产品
    </h3>
    <ul class="breadcrumb">
        <li>
            <%= link_to '全部产品', manage_products_path %>
        </li>
        <li class="active"> 新建 </li>
    </ul>
</div>
<!-- page heading end-->
<%= render 'form', index_product: @product %>

<script>
    $("body").on("submit", "#product-form", function() {
        return false
    })
    $("body").on("click", "#product-submit", function(e) {
        e.preventDefault();
        showLoading("提交中...");
        var fd = new FormData($("#product-form")[0]);
        $(this).attr("disabled", true).val("提交中...");
        $.ajax({
            url: '/manage/products',
            data: fd,
            type: 'post',
            contentType: false,
            processData: false,
            success: function(res) {
                window.location = res
            },
            error: function(res) {
                $("#error").html($(res.responseText).find("#error").html());
                $("#product-submit").removeAttr("disabled").val("保存产品信息");
                hideLoading();
                window.scrollTo(0, 1);
            },
            complete: function() {
            }
        })
        return false;
    })
</script>
