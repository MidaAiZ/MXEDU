<section>
    <!-- left side start-->
    <div class="left-side sticky-left-side">

        <!--logo and iconic logo start-->
        <div class="logo">
            <a href="/"><img src="/assets/logo.png" alt=""></a>
        </div>

        <div class="logo-icon text-center">
            <a href="/"><img src="/assets/logo_icon.png" alt=""></a>
        </div>
        <!--logo and iconic logo end-->

        <div class="left-side-inner">

            <!-- visible to small devices only -->
            <div class="visible-xs hidden-sm hidden-md hidden-lg">
                <div class="media logged-user">
                    <%= image_tag @admin.avatar.mini, class: "media-object"  %>
                    <div class="media-body">
                        <h4><a href="#"><%= @admin.name %></a></h4>
                        <span><%= translate_role @admin.role %></span>
                    </div>
                </div>

                <h5 class="left-nav-title">管理员信息</h5>
                <ul class="nav nav-pills nav-stacked custom-nav">
                    <li>
                        <%= link_to manage_profile_path do %>
                          <i class="fa fa-user"></i> <span>个人中心</span>
                        <% end %>
                    </li>
                    <!-- <li>
                        <a href="#"><i class="fa fa-cog"></i> <span>Settings</span></a>
                    </li> -->
                    <li>
                        <%= link_to manage_logout_path, method: :post do %>
                          <i class="fa fa-sign-out"></i> <span>退出</span>
                        <% end %>
                    </li>
                </ul>
            </div>

            <!--sidebar nav start-->
          <ul class="nav nav-pills nav-stacked custom-nav">
            <li class='<%= 'active' if params[:controller] == 'manage/main' %>'>
              <a href="/manage">
                <i class="fa fa-home"></i>
                <span>首页</span>
              </a>
            </li>

            <li class="menu-list <%= check_cur_ctrl 'manage/products' %>">
              <a href="">
                <i class="fa fa-book"></i>
                <span>产品管理</span>
              </a>
              <ul class="sub-menu-list">
                <li>
                  <a href="/manage/products">全部产品</a>
                </li>
                <li>
                  <a href="/manage/products/new">新建产品</a>
                </li>
              </ul>
            </li>

            <li class="menu-list <%= check_cur_ctrl 'manage/appoints' %>">
              <a href="">
                <i class="fa fa-coffee"></i>
                <span>预约管理</span>
              </a>
              <ul class="sub-menu-list">
                <li>
                  <a href="/manage/appoints">全部预约</a>
                </li>
              </ul>
            </li>

            <li class="menu-list <%= check_cur_ctrl 'manage/histories' %>">
              <a href="">
                <i class="fa fa-clock-o"></i>
                <span>浏览记录</span>
              </a>
              <ul class="sub-menu-list">
                <li>
                  <a href="/manage/histories">全部记录</a>
                </li>
              </ul>
            </li>

            <li class="menu-list <%= check_cur_ctrl 'manage/users' %>">
              <a href="">
                <i class="fa fa-user"></i>
                <span>用户管理</span>
              </a>
              <ul class="sub-menu-list">
                <li>
                  <a href="/manage/users">全部用户</a>
                </li>
              </ul>
            </li>
            <!-- <li class="menu-list">
              <a href="">
                <i class="fa fa-cog"></i>
                <span>系统设置</span>
              </a>
              <ul class="sub-menu-list">
                <li>
                  <a href="/manage/profile">管理员信息</a>
                </li>
                <% if @admin.super? %>
                    <li>
                      <a href="/manage/admins">全部管理员</a>
                    </li>
                <% end %>
              </ul>
            </li> -->
          </ul>
          <!--sidebar nav end-->

        </div>
    </div>
    <!-- left side end-->

    <!-- main content start-->
    <div class="main-content" >

        <!-- header section start-->
        <div class="header-section">

            <!--toggle button start-->
            <a class="toggle-btn"><i class="fa fa-bars"></i></a>
            <!--toggle button end-->

            <!--search start-->
            <form class="searchform" action="/" method="post">
                <input type="text" class="form-control" name="keyword" placeholder="Search here..." />
            </form>
            <!--search end-->

            <!--notification menu start -->
            <div class="menu-right">
                <ul class="notification-menu">
                    <li>
                        <a href="#" class="btn btn-default dropdown-toggle info-number" data-toggle="dropdown">
                            <i class="fa fa-envelope-o"></i>
                            <span class="badge"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-head pull-right">
                            <h5 class="title">站内消息</h5>
                            <ul class="dropdown-list normal-list">
                                <li>
                                    <a href="">
                                        <span class="thumb">暂无</span>
                                        <!-- <span class="desc">
                                          <span class="name">暂无</span>
                                          <span class="msg">Lorem ipsum dolor sit amet...</span>
                                        </span> -->
                                    </a>
                                </li>
                                <!-- <li class="new"><a href="">所有消息</a></li> -->
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a href="#" class="btn btn-default dropdown-toggle info-number" data-toggle="dropdown">
                            <i class="fa fa-bell-o"></i>
                            <span class="badge"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-head pull-right">
                            <h5 class="title">系统公告</h5>
                            <ul class="dropdown-list normal-list">
                                <li class="new">
                                    <a href="">
                                        <!-- <span class="label label-danger"><i class="fa fa-bolt"></i></span> -->
                                        <span class="name">暂无 </span>
                                        <!-- <em class="small">34 mins</em> -->
                                    </a>
                                </li>
                                <!-- <li class="new"><a href="">所有公告</a></li> -->
                            </ul>
                        </div>
                    </li>
                    <li>
                        <!-- 判断是否登录 -->
                        <% if session[:admin_id] %>
                            <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <%= image_tag @admin.avatar.mini %>
                                <%= @admin.name %>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                                <li>
                                    <%= link_to manage_profile_path do %>
                                      <i class="fa fa-user"></i> <span>个人中心</span>
                                    <% end %>
                                </li>
                                <!-- <li>
                                    <a href="#"><i class="fa fa-cog"></i> <span>Settings</span></a>
                                </li> -->
                                <li>
                                    <%= link_to manage_logout_path, method: :post do %>
                                      <i class="fa fa-sign-out"></i> <span>退出</span>
                                    <% end %>
                                </li>
                            </ul>
                        <% else %>
                            <%= link_to '登录', manage_login_path, type: "button", class: "btn btn-default", style: "margin-top: 8px;" %>
                        <% end %>
                    </li>

                </ul>
            </div>
            <!--notification menu end -->
        </div>
        <!-- header section end-->


    <% unless session[:admin_id] %>
        <!-- Small login modal -->
        <div class="modal fade login-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <%= form_tag login_path, class: "form-inline" do %>
                <div class="field">
                    <%= label_tag "user[phone]", "手机号" %>
                    <%= text_field_tag "user[phone]", '', placeholder: "输入手机号", class: "form-control" %>
                </div>
                <div class="field">
                    <%= label_tag "user[password]", "密码" %>
                    <%= password_field_tag "user[password]", '', placeholder: "输入密码", class: "form-control" %>
                </div>
                <div class="action">
                    <%= submit_tag "登录" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
