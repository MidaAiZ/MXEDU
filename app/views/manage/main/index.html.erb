<!-- page heading start-->
        <div class="page-heading">
            <h3>
                学吧后台管理
            </h3>
            <ul class="breadcrumb">
                <li>
                    <a href="#">管理员</a>
                </li>
                <li class="active"> 首页 </li>
            </ul>
            <div class="state-info">
                <section class="panel">
                    <div class="panel-body">
                        <div class="summary">
                            <span>今日预约</span>
                            <h3 class="red-txt" id='t-a-count'>-</h3>
                        </div>
                        <div id="income" class="chart-bar"></div>
                    </div>
                </section>
                <section class="panel">
                    <div class="panel-body">
                        <div class="summary">
                            <span>今日访客</span>
                            <h3 class="green-txt" id='t-v-count'>-</h3>
                        </div>
                        <div id="expense" class="chart-bar"></div>
                    </div>
                </section>
            </div>
        </div>
        <!-- page heading end-->
        <!--body wrapper start-->
        <div class="wrapper">
            <div class="row">
                <div class="col-md-6">
                    <!--statistics start-->
                    <div class="row state-overview">
                        <div class="col-md-6 col-xs-6 col-sm-6">
                            <div class="panel purple">
                                <div class="symbol">
                                    <i class="fa fa-user"></i>
                                </div>
                                <div class="state-value">
                                    <div class="value">
                                        <%= link_to '-', manage_users_path, id: 'u-count' %>
                                    </div>
                                    <div class="title">用户数</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-6 col-sm-6">
                            <div class="panel red">
                                <div class="symbol">
                                    <i class="fa fa-tags"></i>
                                </div>
                                <div class="state-value">
                                    <div class="value">
                                        <%= link_to '-', manage_products_path, id: 'p-count' %>
                                    </div>
                                    <div class="title">产品数</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row state-overview">
                        <div class="col-md-6 col-xs-6 col-sm-6">
                            <div class="panel blue">
                                <div class="symbol">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <div class="state-value">
                                    <div class="value">
                                        <%= link_to '-', manage_appoints_path, id: 'a-count' %>
                                    </div>
                                    <div class="title"> 总预约量</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-6 col-sm-6">
                            <div class="panel green">
                                <div class="symbol">
                                    <i class="fa fa-eye"></i>
                                </div>
                                <div class="state-value">
                                    <div class="value">
                                        <%= link_to '-', manage_histories_path, id: 'v-count' %>
                                    </div>
                                    <div class="title"> 总访客量</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--statistics end-->
                </div>
                <div class="col-md-6">
                    <!--more statistics box start-->
                    <div class="panel deep-purple-box">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-7 col-sm-7 col-xs-7">
                                    <div id="graph-donut" class="revenue-graph"></div>

                                </div>
                                <div class="col-md-5 col-sm-5 col-xs-5">
                                    <ul class="bar-legend">
                                        <li><span class="blue"></span> 语言培训</li>
                                        <li><span class="green"></span> 留学机构</li>
                                        <li><span class="purple"></span> 考研课程</li>
                                        <li><span class="red"></span> 驾校学车</li>
                                        <li><span class="yellow"></span> 生活娱乐</li>
                                        <li><span class="grey"></span> 其它</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--more statistics box end-->
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="row revenue-states">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <h4>近期流量统计</h4>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <ul class="revenue-nav">
                                        <li><a href="javascript: void(0)">近一周</a></li>
                                        <!-- <li><a href="#">monthly</a></li>
                                        <li class="active"><a href="#">yearly</a></li> -->
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="clearfix">
                                        <div id="main-chart-legend" class="pull-right">
                                        </div>
                                    </div>

                                    <div id="main-chart">
                                        <div id="main-chart-container" class="main-chart">
                                        </div>
                                    </div>
                                    <!-- <ul class="revenue-short-info">
                                        <li>
                                            <h1 class="red">15%</h1>
                                            <p>Server Load</p>
                                        </li>
                                        <li>
                                            <h1 class="purple">30%</h1>
                                            <p>Disk Space</p>
                                        </li>
                                        <li>
                                            <h1 class="green">84%</h1>
                                            <p>Transferred</p>
                                        </li>
                                        <li>
                                            <h1 class="blue">28%</h1>
                                            <p>Temperature</p>
                                        </li>
                                    </ul> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel">
                        <header class="panel-heading">
                            新用户
                            <span class="tools pull-right">
                                <a href="javascript:;" class="fa fa-chevron-down"></a>
                                <a href="javascript:;" class="fa fa-times"></a>
                             </span>
                        </header>
                        <div class="panel-body">
                            <ul class="goal-progress">
                                <% @new_users.each do |u| %>
                                    <li>
                                        <div class="prog-avatar">
                                            <%= image_tag u.avatar.mini %>
                                        </div>
                                        <div class="details">
                                            <div class="title">
                                                <%= link_to u.name || '', manage_user_path(u) %>
                                                 - <%= u.phone %>
                                            </div>
                                            <div class="u-info">
                                                <p><span>学校: <%= u.school %></span> - 专业: <span><%= u.major %></span> - <span>年级: <%= u.grade %></span></p>
                                            </div>
                                        </div>
                                    </li>
                                <% end %>
                            </ul>
                            <div class="text-center"><%= link_to '查看所有用户', manage_users_path %></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--body wrapper end-->

    </div>
    <!-- main content end-->

    <%= javascript_include_tag 'manage/chart-init' %>
