<!-- page heading start-->
<div class="page-heading">
  <% if @user %>
      <h3>
          资料浏览历史
      </h3>
      <ul class="breadcrumb">
          <li>
              <%= link_to @user.name + '的个人资料', manage_user_path(@user) %>
          </li>
          <li class="active">
              浏览历史
          </li>
      </ul>
  <% else %>
      <h3>
          资料浏览记录
      </h3>
      <ul class="breadcrumb">
          <li>
              <a href="">浏览历史管理</a>
          </li>
          <li class="active">
              所有记录
          </li>
      </ul>
  <% end %>
</div>

<!-- page heading end-->

<!--body wrapper start-->
<div class="wrapper">
  <div class="row">
    <div class="col-sm-12">
      <section class="panel">
        <header class="panel-heading">
          全部浏览历史信息
        </header>
        <div class="panel-body">
          <div class="adv-table editable-table ">
            <div class="clearfix">
              <div class="btn-group pull-right">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">工具
                  <i class="fa fa-angle-down"></i>
                </button>
                <ul class="dropdown-menu pull-right">
                  <li>
                    <a href="javascript:void(0)" id="print">打印</a>
                  </li>
                  <li>
                    <a href="javascript:void(0)" id="export">导出为Excel</a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="space15"></div>
            <!--startprint-->
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
              <thead>
                <tr>
                  <th>用户姓名/IP地址</th>
                  <th>联系方式</th>
                  <th>浏览资料</th>
                  <th>上次浏览时间</th>
				  <th>浏览次数</th>
                </tr>
              </thead>
              <tbody>
                <!-- 此处动态生成 -->
                <% cache @histories.cache_key, expires_in: 10.minutes do %>
				  <% @histories.each do |h| %>
                    <% cache h.cache_key, expires_in: 10.minutes do %>
    					<tr>
                          <% if h.user %>
                              <td><%= link_to h.user.name || '', manage_user_path(h.user_id) %></td>
                              <td><%= h.user.phone %></td>
                          <% else %>
                              <td>IP: <%= h.remote_ip %></td>
                              <td>无</td>
                          <% end %>
    					  <td><%= link_to h.material_name, manage_material_url(h.material_id) %></td>
    					  <td><%= h.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
    					  <td><%= h.times %></td>
    					</tr>
                      <% end %>
				   <% end %>
                <% end %>
              </tbody>
            </table>
            <!--endprint-->
			<%= paginate @histories %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
<!--body wrapper end-->
