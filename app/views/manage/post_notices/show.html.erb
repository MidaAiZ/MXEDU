<!-- page heading start-->
<div class="page-heading">
    <ul class="breadcrumb">
        <li>
            <%= link_to "<<返回", manage_post_notices_path %>
        </li>
    </ul>
</div>

<!-- page heading end-->

<!--body wrapper start-->
<div class="wrapper">
    <div class="row blog">

    <div class="col-md-8 col-xs-12 col-md-offset-2">
        <div class="blog">
            <div class="single-blog">
                <div class="panel">
                    <div class="panel-body">
                        <span class="t-center n-title">
                            <span>
                                <%= @post_notice.title %>
                            </span>
                            <small class="cate">
                                <label class="label <%= get_notice_label @post_notice.cate %>"><%= @post_notice.cate %></label>
                            </small>
                        </span>
                        <div class="fr-view">
                            <%= (@post_notice.content || '').html_safe %>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="pull-right">
                            <span class='p-l'>浏览：<%= @post_notice.readtimes %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pull-left">
            <p>
                <span>发布时间: <i><%= format_time @post_notice.updated_at %></i></span>
                <br>
                <span>发布者: <%= @post_notice.admin.number if @post_notice.admin %></span>
            </p>
            <span>
            </span>
        </div>
        <% unless @post_notice.is_deleted? %>
            <div class="btn-group pull-right">
                <button data-toggle="dropdown" type="button" class="btn btn-default btn-sm dropdown-toggle">
                    操作<span class="caret"></span>
                </button>
                <ul role="menu" class="dropdown-menu">
                    <li>
                        <%= link_to '修改信息', edit_manage_post_notice_path(@post_notice) %>
                    </li>
                    <li>
                      <%= link_to "删除", manage_post_notice_path(@post_notice), method: :delete, data: { confirm: "确定要删除该公告？" } %>
                    </li>
                </ul>
            </div>
        <% else %>
            <span class="pull-right label label-danger">已删除</span>
        <% end %>
    </div>
  </div>
</div>
<!--body wrapper end-->
<%= stylesheet_link_tag "froala_style.min" %>
