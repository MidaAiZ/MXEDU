<!-- page heading start-->
<div class="page-heading">
    <h3>
        所有院校
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="#">系统设置</a>
        </li>
        <li>
            <a href="#">院校设置</a>
        </li>
    </ul>
</div>
<!-- page heading end-->

<!--body wrapper start-->
<div class="wrapper">
     <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <!-- <header class="panel-heading">
                    Editable Table
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
                </header> -->
                <div class="panel-body">
                    <div class="adv-table editable-table ">
                        <div class="clearfix">
                            <div class="btn-group">
                                <button id="editable-sample_new" class="btn btn-primary">
                                    添加学校 <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <div class="btn-group pull-right">
                                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">工具 <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#">打印</a></li>
                                    <li><a href="#">导出Excel</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="space15"></div>
                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                        <thead>
                            <tr>
                                <th>校名</th>
                                <th>所属城市</th>
                                <th>院校性质</th>
                                <th>级别</th>
                                <th>编辑</th>
                                <th>删除</th>
                            </tr>
                        </thead>
                            <tbody>
                                <% cache @schools.cache_key, expires_in: 1.day do %>
                                    <% @schools.each do |s| %>
                                        <tr class="">
                                            <td><%= s.name %></td>
                                            <td><%= s.city %></td>
                                            <td><%= s.cate %></td>
                                            <td class="center"><%= s.sign %></td>
                                            <td><a class="edit" href="javascript:;" data-id='<%= s.id %>'>编辑</a></td>
                                            <td><a class="delete" href="javascript:;" data-id='<%= s.id %>'>删除</a></td>
                                        </tr>
                                    <% end %>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!--body wrapper end-->

<!-- END JAVASCRIPTS -->
<script>
    jQuery(document).ready(function() {
    EditableTable.init();
    });
</script>
